# Vercel Postgres Environment Variables Template
# Copy this file to .env.local and fill in your values

# ==================================
# DATABASE (Auto-generated by Vercel)
# ==================================
# After running "vercel postgres create" and "vercel env pull .env.local"
# Copy the POSTGRES_PRISMA_URL value to DATABASE_URL
DATABASE_URL="postgres://default:xxxxx@xxxxx-pooler.aws.neon.tech/verceldb?sslmode=require&pgbouncer=true"

# These will be auto-added by Vercel CLI:
# POSTGRES_URL=""
# POSTGRES_PRISMA_URL=""
# POSTGRES_URL_NON_POOLING=""
# POSTGRES_USER=""
# POSTGRES_HOST=""
# POSTGRES_PASSWORD=""
# POSTGRES_DATABASE=""

# ==================================
# FIREBASE (Required for chat/guestbook)
# ==================================
# Get these from: https://console.firebase.google.com/
# Project Settings > General > Your apps > Firebase SDK snippet
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_DB_URL=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=""
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=""
NEXT_PUBLIC_FIREBASE_CHAT_DB="chat"

# ==================================
# AUTHENTICATION (Required)
# ==================================
# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="" # Generate with: openssl rand -base64 32

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
# Get from: https://github.com/settings/developers
GITHUB_ID=""
GITHUB_SECRET=""

# ==================================
# SPOTIFY (Optional - for now playing widget)
# ==================================
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=""
SPOTIFY_CLIENT_SECRET=""
SPOTIFY_REFRESH_TOKEN=""

# ==================================
# WAKATIME (Optional - for coding stats)
# ==================================
# Get from: https://wakatime.com/settings/account
WAKATIME_API_KEY=""

# ==================================
# OPENAI (Optional - for AI chat features)
# ==================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# ==================================
# DEV.TO (Optional - for blog integration)
# ==================================
# Get from: https://dev.to/settings/extensions
DEVTO_API_KEY=""
DEVTO_USERNAME=""

# ==================================
# GITHUB (Optional - for GitHub stats)
# ==================================
# Get from: https://github.com/settings/tokens
GITHUB_READ_USER_TOKEN_PERSONAL=""

# ==================================
# CONTACT FORM (Optional)
# ==================================
CONTACT_FORM_API_KEY=""

# ==================================
# BLOG (Optional)
# ==================================
BLOG_API_URL=""

# ==================================
# NOTES
# ==================================
# 1. Never commit this file with actual values to Git
# 2. For production, add all these to Vercel Dashboard
# 3. Update NEXTAUTH_URL to your production domain when deploying
# 4. Make sure to select all environments when adding to Vercel
#    (Production, Preview, Development)

